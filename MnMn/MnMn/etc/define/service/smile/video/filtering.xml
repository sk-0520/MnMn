<?xml version="1.0" encoding="utf-8" ?>
<filtering>
	<element key="lol">
		<words>
			<word key="ja-jp" value="笑ってるだけのコメント" />
		</words>
		<extends>
			<extend key="pattern" value="^\s*[wWｗＷ草][wWｗＷ草\s]*$" />
			<extend key="ignore-case" value="false" />
		</extends>
	</element>
	<element key="sympathy">
		<words>
			<word key="ja-jp" value="投稿者への労り" />
		</words>
		<extends>
			<extend key="pattern" value="(うぽつ|う(ｐ|p)乙)|(^[8８]+$)" />
			<extend key="ignore-case" value="false" />
		</extends>
	</element>
	<element key="sense-of-unity">
		<words>
			<word key="ja-jp" value="すごい一体感を感じる" />
		</words>
		<extends>
			<extend key="pattern" value="(ざわ)|(^(来|く)るぞ)|(鳥\s*肌)|(^あ(っ|…|・)?$)|(^[！？!\?)]+$)" />
			<extend key="ignore-case" value="false" />
		</extends>
	</element>
	<element key="char4">
		<words>
			<word key="ja-jp" value="四文字まで" />
		</words>
		<extends>
			<extend key="pattern" value=".{5,}" />
			<extend key="ignore-case" value="false" />
		</extends>
	</element>
	<element key="chat">
		<words>
			<word key="ja-jp" value="話されても困る" />
		</words>
		<extends>
			<extend key="pattern" value="([↑↓←→])|(挙手)|(^ノ|ﾉｼ?$)" />
			<extend key="ignore-case" value="false" />
		</extends>
	</element>
	<element key="command">
		<words>
			<word key="ja-jp" value="無意味なコマンド的な何か" />
		</words>
		<extends>
			<extend key="pattern" value="(^eco=)|(/ksk)|(/hidden)|(@|＠倍速)|(/逆再生)" />
			<extend key="ignore-case" value="false" />
		</extends>
	</element>
</filtering>