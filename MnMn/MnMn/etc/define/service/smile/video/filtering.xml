<?xml version="1.0" encoding="utf-8" ?>
<filtering>
	<element key="lol">
		<words>
			<word key="ja-jp" value="笑ってるだけのコメント" />
		</words>
		<extends>
			<extend key="pattern" value="^\s*[wWｗＷ][wWｗＷ\s]\s*$" />
		</extends>
	</element>
	<element key="sympathy">
		<words>
			<word key="ja-jp" value="投稿者への労り" />
		</words>
		<extends>
			<extend key="pattern" value="(うぽつ|う(ｐ|p)乙)|(^[8８]$)" />
		</extends>
	</element>
	<element key="sense-of-unity">
		<words>
			<word key="ja-jp" value="すごい一体感を感じる" />
		</words>
		<extends>
			<extend key="pattern" value="(ざわ)|(^ノ|ﾉｼ?$)|(^(来|く)るぞ)|(鳥\s肌)|(^あっ?$)|($[！？!\?)]$)" />
		</extends>
	</element>
	<element key="char4">
		<words>
			<word key="ja-jp" value="四文字熟語のみ" />
		</words>
		<extends>
			<extend key="pattern" value=".{5,}" />
		</extends>
	</element>
</filtering>