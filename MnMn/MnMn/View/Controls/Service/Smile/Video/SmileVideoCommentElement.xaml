<!--
  呼び出し元から DataContext を設定して使用。
-->
<UserControl
  x:Class="ContentTypeTextNet.MnMn.MnMn.View.Controls.Service.Smile.Video.SmileVideoCommentElement"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  mc:Ignorable="d" 
  d:DesignHeight="300" d:DesignWidth="300"
>
  <Grid Opacity="{Binding Opacity}">
    <TextBlock
      FontSize="{Binding FontSize}"
      FontFamily="{Binding FontFamily}"
      Text="{Binding Content}"
      Opacity="0.8"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Center"
    >
      <TextBlock.Margin>1,1,0,0</TextBlock.Margin>
      <TextBlock.Foreground>
        <SolidColorBrush Color="{Binding Shadow}" />
      </TextBlock.Foreground>
      <TextBlock.Effect>
        <BlurEffect
          Radius="2"
          RenderingBias="Performance"
        />
      </TextBlock.Effect>
    </TextBlock>
    <TextBlock
      FontSize="{Binding FontSize}"
      FontFamily="{Binding FontFamily}"
      Foreground="{Binding Foreground}"
      Text="{Binding Content}" 
      VerticalAlignment="Stretch"
      HorizontalAlignment="Center"
    />

  </Grid>
  <!--<Label 
    FontSize="{Binding FontSize}"
    Foreground="{Binding Foreground}"
    FontFamily="{Binding FontFamily}"
    Opacity="{Binding Opacity}"
    Content="{Binding Content}" 
    VerticalAlignment="Stretch"
    HorizontalAlignment="Center"
  >
    <Label.Effect>
      <DropShadowEffect
        Color="{Binding Shadow}"
        Direction="315"
        BlurRadius="2"
        ShadowDepth="2"
        Opacity="0.8"
        RenderingBias="Performance"
      />
    </Label.Effect>
  </Label>-->
</UserControl>
