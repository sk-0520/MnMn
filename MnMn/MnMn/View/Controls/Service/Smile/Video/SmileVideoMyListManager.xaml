        </TabControl>
      </accordion:AccordionItem>
    </accordion:Accordion>

    <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

    <Grid Grid.Column="2">
      <app_contrls_service_smile_video:SmileVideoFinderControl DataContext="{Binding SelectedFinder}" />
    </Grid>
