<Window 
  x:Class="ContentTypeTextNet.MnMn.MnMn.View.Controls.Service.Smile.Video.SmileVideoPlayerWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:app_ctrl="clr-namespace:ContentTypeTextNet.MnMn.MnMn.View.Controls"
        
  xmlns:vlc_wpf="clr-namespace:xZune.Vlc.Wpf;assembly=xZune.Vlc.Wpf"
  ResizeMode="CanResizeWithGrip"
        
  Title="VideoPlayerWindow" 
  Width="640"
  Height="480"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
>
  <Window.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
  </Window.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Menu Grid.Row="0">
      <MenuItem Header="qwertyuiop" />
    </Menu>

    <!--<vlc_wpf:VlcControl x:Name="player" Grid.Row="1" />-->
    <Grid Grid.Row="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      
      <Viewbox ClipToBounds="True">
        <Grid>
          <vlc_wpf:VlcPlayer x:Name="player"/>
          <Canvas x:Name="normalCommentArea" />
          <Canvas x:Name="contributorCommentArea" />
        </Grid>
      </Viewbox>
      
      <ListBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
        <ListBoxItem>comment</ListBoxItem>
      </ListBox>

      <Grid Grid.Row="1" Grid.Column="0">
        <Grid.RowDefinitions>
          <RowDefinition/>
        </Grid.RowDefinitions>
        <app_ctrl:Navigationbar
          x:Name="seekbar"
          Grid.Row="0"
          VideoPosition="{Binding VideoPosition}"
          VideoLoadedSize="{Binding VideoLoadedSize}"
          VideoTotalSize="{Binding VideoTotalSize}"
          Volume="{Binding Volume}"
          PlayTime="{Binding PlayTime}"
          TotalTime="{Binding TotalTime}"
        />
      </Grid>

      <Grid Grid.Row="2" Grid.Column="0">
        <TextBox></TextBox>
      </Grid>
      
    </Grid>

    <TabControl Grid.Row="2" TabStripPlacement="Left" Visibility="{Binding IsChecked, ElementName=switchInformation, Converter={StaticResource BooleanToVisibilityConverter}}">
        <TabItem Header="movie">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="4" />
              <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
              <Image Width="80" Height="60" Source="{Binding ThumbnailImage}" />
            </StackPanel>

            <GridSplitter Grid.Row="1" />

            <Grid Grid.Column="2">
              <WrapPanel Orientation="Horizontal">
                <TextBlock>tag1</TextBlock>
                <TextBlock>tag1</TextBlock>
                <TextBlock>tag2</TextBlock>
                <TextBlock>tag3</TextBlock>
                <TextBlock>tag4</TextBlock>
                <TextBlock>tag5</TextBlock>
                <TextBlock>tag6</TextBlock>
                <TextBlock>tag7</TextBlock>
              </WrapPanel>
            </Grid>
          </Grid>
        </TabItem>
        <TabItem Header="relation">
        </TabItem>
        <TabItem Header="market">
        </TabItem>
      </TabControl>

    <StatusBar Grid.Row="3" >
      <ToggleButton x:Name="switchInformation" Content="info" IsChecked="True" />
      <StackPanel Orientation="Horizontal" Panel.ZIndex="100" Grid.Row="2" >
        <TextBlock>[</TextBlock>
        <TextBlock>info</TextBlock>
        <TextBlock Text="{Binding InformationLoadState}" />
        <TextBlock>,image</TextBlock>
        <TextBlock Text="{Binding ThumbnailLoadState}" />
        <TextBlock>,comment</TextBlock>
        <TextBlock Text="{Binding CommentLoadState}" />
        <TextBlock>,video</TextBlock>
        <TextBlock Text="{Binding VideoLoadState}" />
        <TextBlock>]</TextBlock>
        <TextBlock>datetime</TextBlock>
        <TextBlock>play</TextBlock>
        <TextBlock>mylist</TextBlock>
      </StackPanel>
    </StatusBar>



  </Grid>
</Window>
