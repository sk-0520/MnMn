  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Orientation="Horizontal">
      <app_contrl_nc_video:RankingContextElements 
        TargetItemsSource="{Binding TargetItems}"
        PeriodItemsSource="{Binding PeriodItems}"
        SelectedTarget="{Binding SelectedTarget}"
        SelectedPeriod="{Binding SelectedPeriod}"
      />
      <ComboBox 
        DisplayMemberPath="CurrentWord" 
        ItemsSource="{Binding CategoryItems}"
        SelectedItem="{Binding SelectedCategory}"
      />
      <Button
        Content="get"
        Command="{Binding GetRankingCategoryCommand}"
      />
    </StackPanel>

    <TabControl 
      Grid.Row="1" 
      ItemsSource="{Binding RankingCategoryItems}" 
      SelectedItem="{Binding SelectedRankingCategory}" 
    >
      <TabControl.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding CategoryName}" />
            <app_contrl_nc_video:RankingContextElements 
                TargetItemsSource="{Binding TargetItems}"
                PeriodItemsSource="{Binding PeriodItems}"
                SelectedTarget="{Binding SelectedTarget, Mode=TwoWay}"
                SelectedPeriod="{Binding SelectedPeriod, Mode=TwoWay}"
              />
            <Button
                Content="reload"
                Command="{Binding ReloadCategoryCommand}"
              />
          </StackPanel>
        </DataTemplate>
      </TabControl.ItemTemplate>
      <TabControl.ContentTemplate>
        <DataTemplate>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="5*" />
              <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" >
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>
              <TextBlock Grid.Row="0" Text="{Binding CategoryName}" />
              <app_contrl_nc_video:VideoList  
                Grid.Row="1" 
                VideoInformationItemsSource="{Binding VideoInformationItems, Mode=OneWay}" 
                Text="{Binding VideoInformationList[0].Title}"
                Background="AliceBlue"
                />
            </Grid>

            <ListView Grid.Column="1" ItemsSource="{Binding VideoInformationItems}">
              <ListView.View>
                <GridView>
                  <GridViewColumn Header="num" DisplayMemberBinding="{Binding Number}" />
                  <GridViewColumn>
                    <GridViewColumn.HeaderTemplate>
                      <ItemContainerTemplate>
                        <StackPanel>
                          <Label>test</Label>
                          <Button>asd</Button>
                          <TextBox>789</TextBox>
                        </StackPanel>
                      </ItemContainerTemplate>
                    </GridViewColumn.HeaderTemplate>
                    <GridViewColumn.CellTemplate>
                      <ItemContainerTemplate>
                        <Label>123</Label>
                      </ItemContainerTemplate>
                    </GridViewColumn.CellTemplate>
                  </GridViewColumn>

                  <GridViewColumn>
                    <GridViewColumn.HeaderTemplate>
                      <ItemContainerTemplate>
                        <StackPanel>
                          <Label>thumbnail</Label>
                        </StackPanel>
                      </ItemContainerTemplate>
                    </GridViewColumn.HeaderTemplate>
                    <GridViewColumn.CellTemplate>
                      <ItemContainerTemplate>
                        <StackPanel>
                          <TextBlock Text="{Binding VideoThumbnailLoad}" />
                          <Image Source="{Binding ThumbnailImage, Mode=OneWay}" />

                        </StackPanel>
                      </ItemContainerTemplate>
                    </GridViewColumn.CellTemplate>
                  </GridViewColumn>

                  <GridViewColumn>
                    <GridViewColumn.HeaderTemplate>
                      <ItemContainerTemplate>
                        <StackPanel>
                          <Label>title</Label>
                        </StackPanel>
                      </ItemContainerTemplate>
                    </GridViewColumn.HeaderTemplate>
                    <GridViewColumn.CellTemplate>
                      <ItemContainerTemplate>
                        <TextBlock Text="{Binding Title}" />
                      </ItemContainerTemplate>
                    </GridViewColumn.CellTemplate>
                  </GridViewColumn>
                </GridView>
              </ListView.View>
            </ListView>
            
          </Grid>
        </DataTemplate>
      </TabControl.ContentTemplate>
