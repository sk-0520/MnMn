<UserControl 
  x:Class="ContentTypeTextNet.MnMn.MnMn.View.Control.NicoNico.Video.RankingManager"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:app_contrl_nc_video="clr-namespace:ContentTypeTextNet.MnMn.MnMn.View.Control.NicoNico.Video"
  
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  mc:Ignorable="d" 
  d:DesignHeight="300" d:DesignWidth="300"
>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <app_contrl_nc_video:RankingToolbar Grid.Row="0" />
    
    <TabControl Grid.Row="1">
      <TabControl.Template>
        <ControlTemplate>
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <app_contrl_nc_video:RankingGroupElements Grid.Row="0" />
            <app_contrl_nc_video:VideoList Grid.Row="0" />
          </Grid>
        </ControlTemplate>
      </TabControl.Template>
    </TabControl>

  </Grid>
</UserControl>
