<Window 
  x:Class="ContentTypeTextNet.MnMn.Setup.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  
  Title="MnMn セットアップ" 
  Width="250"
  Height="350" 
>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel>
      <TextBlock>MnMn セットアップ</TextBlock>
    </StackPanel>
    
    <StackPanel Grid.Row="1">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0">インストール先</Label>
        <TextBox x:Name="inputInstallDirectoryPath"  Grid.Column="1" />
        <Button  Grid.Column="2">デフォルト</Button>
      </Grid>

      <CheckBox x:Name="selectCreateShortcut">デスクトップにショートカットを作成する</CheckBox>
      <CheckBox x:Name="selectInstallToExecute">インストール完了後に MnMn を起動する</CheckBox>
    </StackPanel>

    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      
      <Button x:Name="commandInstall" Grid.Column="0">インストール開始</Button>
      <Button x:Name="commandClose" Grid.Column="1">閉じる</Button>
    </Grid>


  </Grid>
</Window>
