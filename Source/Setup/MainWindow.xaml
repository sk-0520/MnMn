<Window 
  x:Class="ContentTypeTextNet.MnMn.Setup.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  
  Title="MnMn セットアップ" 
  Width="250"
  Height="350" 
  
  Initialized="Window_Initialized"
>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel>
      <TextBlock>MnMn セットアップ</TextBlock>
    </StackPanel>
    
    <Grid Grid.Row="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition />
        <RowDefinition />
      </Grid.RowDefinitions>

      <Grid Grid.Row="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0">インストール先</Label>
        <TextBox x:Name="inputInstallDirectoryPath" Grid.Column="1" />
        <Button x:Name="commandResetInstallDirectoryPath" Grid.Column="2" Click="commandResetInstallDirectoryPath_Click">デフォルト</Button>
      </Grid>
      
      <StackPanel Grid.Row="1">
        <CheckBox x:Name="selectCreateShortcut" IsChecked="True">デスクトップにショートカットを作成する</CheckBox>
        <CheckBox x:Name="selectInstallToExecute" IsChecked="True">インストール完了後に MnMn を起動する</CheckBox>
      </StackPanel>

      <Grid Grid.Row="2">
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0">info</Label>
        <ProgressBar x:Name="progressInformation" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="2" />

        <Label Grid.Row="1" Grid.Column="0">download</Label>
        <ProgressBar x:Name="progressDownload" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="100" />

        <Label Grid.Row="2" Grid.Column="0">expand</Label>
        <ProgressBar x:Name="progressExpand" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="100" />

      </Grid>

      <ListView x:Name="listLog" Grid.Row="3">
        <ListView.View>
          <GridView>
            <GridViewColumn DisplayMemberBinding="{Binding Kind}" Header="Kind" />
            <GridViewColumn DisplayMemberBinding="{Binding Message}" Header="Message" />
          </GridView>
        </ListView.View>
      </ListView>
    </Grid>

    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      
      <Button x:Name="commandInstall" Grid.Column="0" Click="commandInstall_Click">インストール開始</Button>
      <Button x:Name="commandClose" Grid.Column="1" Click="commandClose_Click">閉じる</Button>
    </Grid>


  </Grid>
</Window>
