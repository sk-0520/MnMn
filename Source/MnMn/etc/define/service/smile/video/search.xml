<?xml version="1.0" encoding="utf-8" ?>
<search>
	<contents service="video" max-index="1600" max-count="100">
		<!-- 検索 -->
		<method>
			<element key="viewCounter">
				<words>
					<word key="ja-jp" value="再生数" />
				</words>
			</element>
			<element key="mylistCounter">
				<words>
					<word key="ja-jp" value="マイリスト数" />
				</words>
			</element>
			<element key="commentCounter">
				<words>
					<word key="ja-jp" value="コメント数" />
				</words>
			</element>
			<element key="startTime">
				<words>
					<word key="ja-jp" value="投稿時間" />
				</words>
			</element>
		</method>
		<!-- ソート -->
		<sort>
			<element key="-">
				<words>
					<word key="ja-jp" value="昇順" />
				</words>
			</element>
			<element key="+">
				<words>
					<word key="ja-jp" value="降順" />
				</words>
			</element>
		</sort>
		<!-- タグ・キーワード -->
		<type>
			<element key="tagsExact">
				<words>
					<word key="ja-jp" value="タグ" />
				</words>
				<extends>
					<extend key="type" value="tag" />
				</extends>
			</element>
			<element key="title,description,tags">
				<words>
					<word key="ja-jp" value="キーワード" />
				</words>
				<extends>
					<extend key="type" value="keyword" />
				</extends>
			</element>
		</type>
		<result>
			<field>contentId</field>
			<field>title</field>
			<field>description</field>
			<field>tags</field>
			<field>categoryTags</field>
			<field>viewCounter</field>
			<field>mylistCounter</field>
			<field>commentCounter</field>
			<field>startTime</field>
			<field>thumbnailUrl</field>
		</result>
	</contents>

	<official max-index="1600" max-count="32">
		<!-- 検索 -->
		<method>
			<element key="v">
				<words>
					<word key="ja-jp" value="再生数" />
				</words>
			</element>
			<element key="n">
				<words>
					<word key="ja-jp" value="最新のコメント" />
				</words>
			</element>
			<element key="m">
				<words>
					<word key="ja-jp" value="マイリスト" />
				</words>
			</element>
			<element key="r">
				<words>
					<word key="ja-jp" value="コメント数" />
				</words>
			</element>
			<element key="f">
				<words>
					<word key="ja-jp" value="投稿日時" />
				</words>
			</element>
			<element key="l">
				<words>
					<word key="ja-jp" value="再生時間" />
				</words>
			</element>
		</method>
		<!-- ソート(単語の意味と役割違うけどしゃあない) -->
		<sort>
			<element key="d">
				<words>
					<word key="ja-jp" value="降順" />
				</words>
			</element>
			<element key="a">
				<words>
					<word key="ja-jp" value="昇順" />
				</words>
			</element>
		</sort>
		<!-- タグ・キーワード -->
		<type>
			<element key="tag">
				<words>
					<word key="ja-jp" value="タグ" />
				</words>
				<extends>
					<extend key="type" value="tag" />
				</extends>
			</element>
			<element key="search">
				<words>
					<word key="ja-jp" value="キーワード" />
				</words>
				<extends>
					<extend key="type" value="keyword" />
				</extends>
			</element>
		</type>
	</official>
</search>