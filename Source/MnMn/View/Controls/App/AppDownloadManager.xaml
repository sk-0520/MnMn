<UserControl 
  x:Class="ContentTypeTextNet.MnMn.MnMn.View.Controls.App.AppDownloadManager"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  mc:Ignorable="d" 
  d:DesignHeight="300" d:DesignWidth="300"
>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>
    
    <Grid>
      <ListBox ItemsSource="{Binding DownloadStateItems}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <StackPanel>
              <TextBlock Text="{Binding State.DisplayText}" />
              <TextBlock Text="{Binding State.DownloadUri}" />
              <TextBlock Text="{Binding State.DownLoadState}" />
              <TextBlock Text="{Binding State.DownloadedSize}" />
              <TextBlock Text="{Binding State.DownloadTotalSize}" />
              <ProgressBar Minimum="0" Maximum="1">
                <ProgressBar.Style>
                  <Style TargetType="ProgressBar" BasedOn="{StaticResource {x:Type ProgressBar}}">
                    <Style.Triggers>
                      <DataTrigger Binding="{Binding State.EnabledCompleteSize}" Value="False">
                        <Setter Property="IsIndeterminate" Value="True" />
                      </DataTrigger>
                      <DataTrigger Binding="{Binding State.DownLoadState}" Value="Loaded">
                        <Setter Property="Visibility" Value="Hidden" />
                        <Setter Property="Value" Value="1" />
                      </DataTrigger>
                    </Style.Triggers>
                    
                    <Setter Property="Value" Value="{Binding DownloadingProgress, Mode=OneWay}" />
                  </Style>
                </ProgressBar.Style>
              </ProgressBar>
              <Button>
                <Button.Style>
                  <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Style.Triggers>
                      <DataTrigger Binding="{Binding State.DownLoadState}" Value="Failure">
                        <Setter Property="Command" Value="{Binding StartDownloadCommand}" />
                        <Setter Property="Content" Value="retry" />
                        <Setter Property="Visibility" Value="Visible" />
                      </DataTrigger>
                      <DataTrigger Binding="{Binding State.DownLoadState}" Value="Loading">
                        <Setter Property="Command" Value="{Binding CancelDownloadCommand}" />
                        <Setter Property="Content" Value="cancel" />
                        <Setter Property="Visibility" Value="Visible" />
                      </DataTrigger>
                    </Style.Triggers>
                    
                    <Setter Property="Visibility" Value="Collapsed" />
                  </Style>
                </Button.Style>
                
              </Button>

              <Button Content="open" Command="{Binding State.ExecuteTargetCommand}">
                <Button.Style>
                  <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Style.Triggers>
                      <DataTrigger Binding="{Binding State.DownLoadState}" Value="Loaded">
                        <Setter Property="Visibility" Value="Visible" />
                      </DataTrigger>
                    </Style.Triggers>
                    
                    <Setter Property="Visibility" Value="Collapsed" />
                  </Style>
                </Button.Style>
              </Button>
              <Button Content="dir" Command="{Binding State.OpenDirectoryCommand}">
                <Button.Style>
                  <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Style.Triggers>
                      <DataTrigger Binding="{Binding State.DownLoadState}" Value="Loaded">
                        <Setter Property="Visibility" Value="Visible" />
                      </DataTrigger>
                    </Style.Triggers>

                    <Setter Property="Visibility" Value="Collapsed" />
                  </Style>
                </Button.Style>
              </Button>

            </StackPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Grid>
  </Grid>
</UserControl>
